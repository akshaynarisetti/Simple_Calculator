<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundTint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#143959"
        android:maxLength="12"
        android:textSize="50sp"

        android:textColor="@color/teal_200"
        android:padding="10dp"
        android:gravity="right|bottom|center"


        />
    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#474242"

        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="7"
            android:backgroundTint="#D4E8FF"
            android:onClick="onDigit"
            android:layout_marginHorizontal="3dp"



            />
        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#D4E8FF"
            android:text="8"
            android:onClick="onDigit"
            android:layout_marginHorizontal="3dp"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#D4E8FF"
            android:text="9"
            android:onClick="onDigit"
            android:layout_marginHorizontal="3dp"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#D4E8FF"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="/"
            android:onClick="onOperator"
            android:layout_marginHorizontal="3dp"
            app:backgroundTint="#efefef"


            />





</LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        android:backgroundTint="#D4E8FF"
        >

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#22AFF1"
            android:text="4"
            android:layout_marginHorizontal="3dp"
            android:onClick="onDigit"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#22AFF1"
            android:text="5"
            android:layout_marginHorizontal="3dp"
            android:onClick="onDigit"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#22AFF1"
            android:text="6"
            android:layout_marginHorizontal="3dp"
            android:onClick="onDigit"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#22AFF1"
            android:text="X"
            android:layout_marginHorizontal="3dp"
            android:onClick="onOperator"
            app:backgroundTint="#efefef"


            />





    </LinearLayout>
    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="3dp"
        android:background="#FCEA9A"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#453cc9"
            android:onClick="onDigit"
            android:text="1"
            android:textColor="@color/black"


            />
        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/black"
            android:backgroundTint="#453cc9"
            android:text="2"
            android:onClick="onDigit"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/black"
            android:backgroundTint="#453cc9"
            android:text="3"
            android:onClick="onDigit"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnSubtraction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            android:textColor="@color/black"
            android:backgroundTint="#453cc9"
            android:text="-"
            android:textSize="25sp"
            android:onClick="onOperator"
            app:backgroundTint="#efefef"


            />





    </LinearLayout>
    <!-- Row 4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="#B8F0c8"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#F8E7AE"
            android:text="."
            android:textSize="25dp"
            android:onClick="onDecimalPoint"
            app:backgroundTint="#efefef"
            android:layout_marginHorizontal="3dp"

            />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#F8E7AE"
            android:text="0"
            android:layout_marginHorizontal="3dp"
            android:onClick="onDigit"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#F8E7AE"
            android:text="CLR"
            android:layout_marginHorizontal="3dp"
            android:onClick="onClear"
            app:backgroundTint="#efefef"


            />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#F8E7AE"
            android:text="+"

            android:layout_marginHorizontal="3dp"
            android:onClick="onOperator"
            app:backgroundTint="#efefef"


            />





    </LinearLayout>
    <!-- Last Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:onClick="onEqual"
            android:text="="
            android:backgroundTint="#B8F0c8"
            android:textSize="45sp"
            android:textColor="@color/black"
/>


    </LinearLayout>



    </LinearLayout>
